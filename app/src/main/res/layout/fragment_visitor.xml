<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.fm.VisitorFragment">




    <LinearLayout
        android:id="@+id/layar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_margin="10sp"
            android:id="@+id/btn_izin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_izin"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rosarivo"
                    android:text="Izin LOT"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="10sp"
            android:id="@+id/btn_visit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3sp"
                    android:src="@drawable/ic_visitor"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/rosarivo"
                    android:text="Visitor"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_scan_visitor"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10sp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3sp"
                    android:src="@drawable/ic_visitor"/>


                <TextView
                    android:layout_margin="10sp"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/rosarivo"
                    android:text="Guest Visit"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>